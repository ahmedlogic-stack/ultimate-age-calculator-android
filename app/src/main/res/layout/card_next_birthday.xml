<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Card Title -->
        <TextView
            android:id="@+id/tvNextBirthdayTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Next Birthday In"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/background"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Horizontal Row for Months, Days, Day -->
        <LinearLayout
            android:id="@+id/llNextBirthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvNextBirthdayTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Months Column -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvNextMonthsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Months"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="12sp"
                    android:textColor="@color/background"/>
                <TextView
                    android:id="@+id/tvNextMonthsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryText"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Vertical Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>

            <!-- Days Column -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvNextDaysLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/background"/>
                <TextView
                    android:id="@+id/tvNextDaysValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryText"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Vertical Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>

            <!-- Day Name Column -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvNextDayNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="12sp"
                    android:textColor="@color/background"/>
                <TextView
                    android:id="@+id/tvNextDayNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryText"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
