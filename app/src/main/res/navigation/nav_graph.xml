<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.agecalculator.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_enterDOPFragment"
            app:destination="@id/enterDOPFragment"/>

        <action
            android:id="@+id/action_home_to_compareAgeFragment"
            app:destination="@id/compareAgeFragment"/>

        <action
            android:id="@+id/action_home_to_birthdayFragment"
            app:destination="@id/birthdayWishesFragment"/>

        <action
            android:id="@+id/action_home_to_planetaryFragment"
            app:destination="@id/planetaryFragment"/>
        <action
            android:id="@+id/action_home_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_home_to_historyFragment"
            app:destination="@id/historyFragment" />


    </fragment>

    <!-- Age Calculator -->
    <fragment
        android:id="@+id/ageCalculatorFragment"
        android:name="com.example.agecalculator.AgeCalculatorFragment"
        android:label="Age Calculator"
        tools:layout="@layout/fragment_age_calculator">

        <action
            android:id="@+id/action_ageCalculatorFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_ageCalculatorFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>

    <!-- Compare Age -->
    <fragment
        android:id="@+id/compareAgeFragment"
        android:name="com.example.agecalculator.CompareAgeFragment"
        android:label="Compare Age"
        tools:layout="@layout/fragment_compare_age">
        <action
            android:id="@+id/action_compareAgeFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_compareAgeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <!-- Birthday -->
    <fragment
        android:id="@+id/birthdayWishesFragment"
        android:name="com.example.agecalculator.BirthdayWishesFragment"
        android:label="Birthday"
        tools:layout="@layout/fragment_birthday_wishes">
        <action
            android:id="@+id/action_birthdayWishesFragment_to_birthdayWishesDetailFragment"
            app:destination="@id/birthdayWishesDetailFragment" />

    </fragment>


    <!-- Planetary -->
    <fragment
        android:id="@+id/planetaryFragment"
        android:name="com.example.agecalculator.PlanetaryFragment"
        android:label="Planetary Age"
        tools:layout="@layout/fragment_planetary"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.agecalculator.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.agecalculator.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/enterDOPFragment"
        android:name="com.example.agecalculator.EnterDOPFragment"
        android:label="fragment_enter_d_o_p"
        tools:layout="@layout/fragment_enter_d_o_p">

        <action
            android:id="@+id/action_enterDOPFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_enterDOPFragment_to_ageCalculatorFragment"
            app:destination="@id/ageCalculatorFragment">

        </action>

    </fragment>
    <fragment
        android:id="@+id/birthdayWishesDetailFragment"
        android:name="com.example.agecalculator.BirthdayWishesDetailFragment"
        android:label="fragment_birthday_wishes_detail"
        tools:layout="@layout/fragment_birthday_wishes_detail" />


</navigation>
